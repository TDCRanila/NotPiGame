<?xml version="1.0" encoding="UTF-8" ?>
<vavoom_model_definition>
	<model name="base">
		<md2 file="models/weapons/pistol/view.md2">
			<frame index="0" />
			<frame index="1" />
			<frame index="2" />
			<frame index="3" />
			<frame index="4" />
			<frame index="5" />
			<frame index="6" />
		</md2>
	</model>
	<model name="flash">
		<md2 file="models/weapons/pistol/flash.md2" offset_y="4.0">
			<frame index="4" />
			<frame index="5" />
		</md2>
	</model>
	<class name="Pistol">
		<!-- Ready -->
		<state index="0" model="base"  frame_index="0" />
		<!-- Down -->
		<state index="1" model="base"  frame_index="1" />
		<!-- Up -->
		<state index="2" model="base"  frame_index="2" />
		<!-- Attack -->
		<state index="3" model="base"  frame_index="3" />
		<state index="4" model="base"  frame_index="4" />
		<state index="5" model="base"  frame_index="5" />
		<state index="6" model="base"  frame_index="6" />
		<!-- Flash -->
		<state index="7" model="flash" frame_index="0" />
		<state index="7" model="flash" frame_index="1" inter="0.5" />
	</class>
</vavoom_model_definition>
