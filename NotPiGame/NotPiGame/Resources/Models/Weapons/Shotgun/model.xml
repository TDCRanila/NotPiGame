	</model>
	<model name="flash">
		<md2 file="models/weapons/shotgun/flash.md2">
			<frame index="3" skin_index="0" />
			<frame index="4" skin_index="1" />
		</md2>
	</model>
	<model name="ground">
		<md2 file="models/weapons/shotgun/ground.md2">
