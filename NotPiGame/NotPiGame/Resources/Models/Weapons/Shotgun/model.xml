		<state index="10" model="base"  frame_index="10" />
		<state index="11" model="base"  frame_index="11" />
		<!-- Flash -->
		<state index="12" model="flash" frame_index="0" />
		<state index="13" model="flash" frame_index="1" />
		<!-- Spawn -->
		<state index="14" model="ground" frame_index="0" />
